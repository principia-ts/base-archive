{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "incremental": true,
    "declaration": false,
    "module": "es6",
    "target": "es2020",
    "rootDir": "../src",
    "outDir": "../dist/dist/node",
    "sourceMap": true,
    "plugins": [
      {
        "after": true,
        "transform": "@0x706b/ts-transform-fix-esm",
        "relativeProjectRoot": "../../"
      }
    ],
    "tsBuildInfoFile": "../tsbuildinfo/node.tsbuildinfo"
  },
  "exclude": ["../build", "../dist", "../node_modules", "../test"],
  "include": ["../src"]
}
