{
  "compilerOptions": {
    "outDir": "../build",
    "rootDir": "../",
    "target": "es2020",
    "module": "commonjs",
    "sourceMap": true,
    "plugins": [
      {
        "transform": "../../compile/src/index.ts",
        "moduleMap": {
          "^src/(.*)": "(@principia/core): _src/$1"
        }
      }
    ]
  },
  "include": ["../src", "../test"],
  "extends": "../../../tsconfig.json"
}
