{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020"],
    "strict": true,
    "declaration": true,
    "noErrorTruncation": true,
    "noEmitOnError": false,
    "suppressImplicitAnyIndexErrors": true,
    "noEmit": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "preserveSymlinks": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "@principia/base/*": ["packages/base/dist/*"],
      "@principia/base": ["packages/base/dist/index"],
      "@principia/test/*": ["packages/test/dist/*"],
      "@principia/test": ["packages/test/dist/index"]
    }
  },
  "exclude": ["build", "node_modules", "dist"]
}
